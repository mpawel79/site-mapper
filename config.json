{
  "crawler": {
    "baseUrl": "https://demo.realworld.show",
    "loginUrl": "https://demo.realworld.show/#/login",
    "registerUrl": "https://demo.realworld.show/#/register",
    "maxPages": 50,
    "timeout": 10000,
    "slowMo": 1000,
    "waitForLoad": 2000,
    "formSubmissionLimit": 2,
    "visualIndicatorDuration": 3000
  },
  "ai": {
    "modelName": "gemini-pro",
    "fallbackModels": ["gemini-1.5-flash", "gemini-1.5-pro"],
    "endpoint": "https://generativelanguage.googleapis.com/v1beta/models",
    "timeout": 30000,
    "retryAttempts": 3
  },
  "browser": {
    "headless": false,
    "devtools": false,
    "slowMo": 1000,
    "args": [
      "--start-maximized",
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-web-security",
      "--allow-running-insecure-content"
    ]
  },
  "output": {
    "screenshotDir": "out/images",
    "mapFile": "out/map.json",
    "timestampFormat": "YYYY-MM-DD_HH-mm-ss",
    "progressSaveInterval": 5
  },
  "agent_suggestions": [
    {
      "situation_name": "sign up to service",
      "given": "you are on sign up page",
      "when": "credentials are required to provide",
      "then": "provide as username: test-username, email: test@example.com, password: test_password and submit"
    },
    {
      "situation_name": "login to service",
      "given": "you are on login page",
      "when": "authentication is required",
      "then": "provide username: testuser, password: TestPassword123! and submit"
    },
    {
      "situation_name": "create article",
      "given": "you are on article creation page",
      "when": "content needs to be created",
      "then": "provide title: Test Article Title, content: This is test content for web crawling purposes and submit"
    },
    {
      "situation_name": "add comment",
      "given": "you are on article or post page",
      "when": "commenting is available",
      "then": "provide comment: This is a test comment for web crawling purposes and submit"
    },
    {
      "situation_name": "update profile",
      "given": "you are on profile settings page",
      "when": "profile information needs updating",
      "then": "provide bio: Test bio content, website: https://example.com, location: New York and submit"
    },
    {
      "situation_name": "search content",
      "given": "you are on search page",
      "when": "search functionality is available",
      "then": "provide search query: test search query and submit"
    },
    {
      "situation_name": "contact form",
      "given": "you are on contact page",
      "when": "contact information is required",
      "then": "provide name: John Doe, email: test@example.com, message: This is a test contact message and submit"
    },
    {
      "situation_name": "newsletter signup",
      "given": "you are on newsletter signup",
      "when": "email subscription is offered",
      "then": "provide email: test@example.com and submit"
    }
  ],
  "logout": {
    "detectionSelectors": [
      "button:has-text('Logout')",
      "button:has-text('Sign out')",
      "button:has-text('Log out')",
      "a:has-text('Logout')",
      "a:has-text('Sign out')",
      "a:has-text('Log out')",
      "[data-testid*='logout']",
      "[data-testid*='signout']"
    ],
    "highlightColor": "#FF5722",
    "highlightBackground": "rgba(255, 87, 34, 0.2)"
  },
  "visual": {
    "indicatorColor": "#4CAF50",
    "indicatorBackground": "rgba(76, 175, 80, 0.2)",
    "formHighlightColor": "#4CAF50",
    "formHighlightBackground": "rgba(76, 175, 80, 0.2)",
    "navigationHighlightColor": "#FF5722",
    "navigationHighlightBackground": "rgba(255, 87, 34, 0.2)",
    "interactionHighlightColor": "#2196F3",
    "interactionHighlightBackground": "rgba(33, 150, 243, 0.2)"
  }
}
